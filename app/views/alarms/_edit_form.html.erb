<%= form_with model: alarm do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mb-4">
    <%= f.label :wake_up_time, class: "font-bold" %>
    <%= f.datetime_field :wake_up_time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :custom_video_url, "Youtube動画のURL（任意）", class: "font-bold" %>
    <%= f.text_field :custom_video_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>
  
  <div class="mt-4">
    <%= f.submit class: "bg-yellow-300 hover:bg-yellow-400 font-bold py-2 px-4 md:py-4 md:px-6 rounded text-sm md:text-base" %>
  </div>
<% end %>