<div class="container mx-auto p-6">
  <h1 class="mb-6">ユーザー情報編集</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field mb-4">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="field mb-4">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field mb-4">
      <%= f.label :password %> <i>(変更しない場合は空欄のままで大丈夫です)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 桁以上入力してください</em>
      <% end %>
    </div>

    <div class="field mb-4">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="field mb-4">
      <%= f.label :current_password %> <i>(入力必須)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div class="actions mb-4">
      <%= f.submit "更新する", class: "btn btn-warning" %>
    </div>
  <% end %>

  <%= button_to "アカウント消去", registration_path(resource_name), class: "btn btn-warning", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
</div>